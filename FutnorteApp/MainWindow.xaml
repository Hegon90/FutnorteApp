<Window x:Class="FutnorteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutnorteApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu Background="#DAE4E2">
            <MenuItem Header="Inicio"/>
            <MenuItem Header="Equipos" Click="TeamsWindow_Click"/>
            <MenuItem Header="Partidos" Click="MatchesWindow_Click"/>
            <MenuItem Header="Resultados" Click="ResultsWindow_Click"/>
        </Menu>
    </Grid>
</Window>
